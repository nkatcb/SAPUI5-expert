<mvc:View controllerName="dtt.project1.controller.Details" 
        xmlns="sap.m" 
        xmlns:mvc="sap.ui.core.mvc" 
        xmlns:core="sap.ui.core" 
        xmlns:dtt="dtt.project1.control"  
        displayBlock="true">
        <Page title="{i18n>Detailspagetitle}" showNavButton="true" navButtonPress=".onNavBack">
            <ObjectHeader id="_IDGenObjectHeader1" title="{northwind>Quantity}x{northwind>ProductName}" 
            responsive="true" fullScreenOptimized="true">
                <attributes>
                    <ObjectAttribute text="{northwind>ShipName}"/>
                    <ObjectAttribute text="{northwind>ShipAddress}"/>
                    <ObjectAttribute text="{northwind>ShipCity}"/>
                    <ObjectAttribute text="{northwind>ShipRegion}"/>
                    <ObjectAttribute text="{northwind>CustomerID}"/>
                    <ObjectAttribute text="{northwind>ShipPostalCode}"/>
                    <ObjectAttribute text="{northwind>CustomerName}"/>
                    
                </attributes>
            </ObjectHeader>
             <dtt:ProductRating id="rating" class="sapUiSmallMarginBeginEnd" change="onRatingChange"/>
        </Page>
</mvc:View>
